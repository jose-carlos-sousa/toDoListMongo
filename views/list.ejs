<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <div class="item">
        <form id ="checkbox"  action="/delete" method="post">
          <input name="checkbox" value="<%= `${i},${listTitle}` %>" type="checkbox" onchange="this.form.submit()" class="checkbox">

          <p class="task"><%=  newListItems[i] %></p>
        </form>
        
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>
 
<%- include("footer") -%>
